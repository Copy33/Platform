<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/owner_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/owner_imageview"
        android:layout_width="@dimen/owner_grid_image_size"
        android:layout_height="@dimen/owner_grid_image_size"
        android:contentDescription="@string/owner_image"
        android:paddingTop="48dp"
        android:paddingBottom="8dp"
        android:tint="@color/colorDividerUi"
        app:srcCompat="@drawable/ic_owner"/>

    <TextView
        android:id="@+id/owner_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/owner_name"
        android:fontFamily="@font/sfpro"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/owner_name"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"/>
</LinearLayout>